#!/usr/bin/env bash

BIN_NAME=$(basename "$0")
COMMAND_NAME=$1
SUB_COMMAND_NAME=$2

sub_help () {
  echo "Usage: $BIN_NAME <command>"
  echo
  echo "Commands:"
  echo "   help             This help message"
  echo "   edit             Open dotfiles in editor ($EDITOR_ALT)"
  echo "   reload           Reload dotfiles"
  echo "   update           Update packages and pkg managers (OS, brew)"
}

sub_edit () {
  sh -c "emacs $DOTFILES_DIR"
}

sub_reload () {
  . ~/.bash_profile && echo "Bash reloaded."
}

sub_update () {
  brew update
  brew upgrade
}

sub_install () {
  local SCRIPT="$DOTFILES_DIR/install/$SUB_COMMAND_NAME.sh"
  [ -f "$SCRIPT" ] && . "$SCRIPT" || echo "Unable to find script to install $SUB_COMMAND_NAME"
}

# Make sure to keep this in sync with the available public commands

sub_completion () {
  echo "help edit reload test update osx dock install"
}

case $COMMAND_NAME in
  "" | "-h" | "--help")
    sub_help
    ;;
  *)
    shift
    sub_${COMMAND_NAME} $@
    if [ $? = 127 ]; then
      echo "'$COMMAND_NAME' is not a known command or has errors." >&2
      sub_help
      exit 1
    fi
    ;;
esac
